@model WaterCompany.Data.Entities.Employee

@{
    ViewData["Title"] = "Delete";
}
<br />
<br />

<h1 style="text-align:center;">Delete Employee</h1>
<br />
<h3 style="text-align:center;"><b>Are you sure you want to delete this employee?</b></h3>
<hr />
<br />
<div class="centerform">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-outline-primary"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-outline-primary" asp-action="Index"><i class="fas fa-backward"></i></a>
    </form>
</div>
<br />
<div class="row col align-self-center">
    <div class="col-md-12">
        <dl class="row data_table" style="padding-left: 45px;">

            <dt class="col-3">
                @Html.DisplayNameFor(model => model.ImageFullPath)
            </dt>
            <dd class="col-9">
                <img class="user-avatar-md" src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width: auto; height: 70px;" />
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.User.FirstName)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.User.FirstName)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.User.LastName)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.User.LastName)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.TIN)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.TIN)
            </dd>
            <dt class="col-3">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-9">
                @Html.DisplayFor(model => model.User.Email)
            </dd>

        </dl>
    </div>
</div>
