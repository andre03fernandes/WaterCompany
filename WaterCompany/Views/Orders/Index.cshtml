@model IEnumerable<WaterCompany.Data.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<br />
<br />
<br />
<br />
<h1 class="big-title"><i class="fas fa-truck"></i> Orders <br /><hr class="center-ball" /><br /><a asp-action="Create" asp-controller="Orders" class="btn btn-outline-primary"><i class="far fa-plus-square"></i> New Order</a></h1>


<div class="table-responsive-sm">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                @if (this.User.IsInRole("Admin"))
                {
                    <th>
                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.User.FullName)
                    </th>
                }
                <th>
                    <i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.OrderDateLocal)
                </th>
                <th>
                    <i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.DeliveryDate)
                </th>
                <th>
                    <i class="fas fa-grip-lines"></i> @Html.DisplayNameFor(model => model.Lines)
                </th>
                <th>
                    <i class="fas fa-hand-holding-usd"></i> @Html.DisplayNameFor(model => model.UnitaryValue)
                </th>
                <th>
                    <i class="fas fa-hand-holding-usd"></i> @Html.DisplayNameFor(model => model.Value)
                </th>
                <th><i class="fas fa-filter"></i> Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <th>
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        </th>
                    }
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.OrderDateLocal)
                    </td>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.DeliveryDate)
                    </td>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.Lines)
                    </td>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.UnitaryValue)
                    </td>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td style="vertical-align: middle">
                        <a asp-action="Deliver" asp-route-id="@item.Id" class="btn btn-outline-info" id="btnDeliver"><i class="fas fa-truck"></i> Deliver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" id="btnDelete"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                @if (this.User.IsInRole("Admin"))
                {
                    <th>
                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.User.FullName)
                    </th>
                }
                <th>
                    <i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.OrderDateLocal)
                </th>
                <th>
                    <i class="fas fa-clock"></i> @Html.DisplayNameFor(model => model.DeliveryDate)
                </th>
                <th>
                    <i class="fas fa-grip-lines"></i> @Html.DisplayNameFor(model => model.Lines)
                </th>
                <th>
                    <i class="fas fa-hand-holding-usd"></i> @Html.DisplayNameFor(model => model.UnitaryValue)
                </th>
                <th>
                    <i class="fas fa-hand-holding-usd"></i> @Html.DisplayNameFor(model => model.Value)
                </th>
                <th><i class="fas fa-filter"></i> Options</th>
            </tr>
        </tfoot>
    </table>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />

@section Scripts{
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}