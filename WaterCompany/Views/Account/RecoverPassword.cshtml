@model WaterCompany.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<br />
<br />
<br />
<br />
<h1 class="big-title">
    <i class="fas fa-key"></i> Recover Password
    <hr class="center-ball" />
</h1>
<div class="text-success text-center">
    <p>
        @ViewBag.Message
    </p>
</div>
<div class="row centerform">
    <div class="col-md-12">
        <form class="form123" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card text-black" style="border-radius: 5px; box-shadow: rgba(0,0,0,0.35) 0 5px 25px;">
                <div class="card-body">
                    <br />
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <button type="submit" value="Recover" class="btn btn-outline-primary"><i class="far fa-plus-square"></i> <i class="fas fa-key"></i> Recover Password</button><br /><br />
                        <a asp-action="Login" class="btn btn-outline-success"><i class="fas fa-backward"></i> Back to Login</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }