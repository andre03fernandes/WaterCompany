@model IEnumerable<WaterCompany.Data.Entities.Consumption>

@{
    ViewData["Title"] = "ClientConsumptions";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<br />
<br />
<br />
<br />
<h1 class="big-title">
    <i class="fas fa-wallet"></i> Consumptions <br /><hr class="center-ball" /><br /><a asp-action="CreateByClient" class="btn btn-outline-primary"><i class="far fa-plus-square"></i> New Consumption</a> &nbsp;
    @if (this.User.IsInRole("Client"))
    {
        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal">
            <i class="fas fa-exclamation-triangle"></i> Warning
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-exclamation-triangle"></i> Insertion of consumptions</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p style="font-family: 'Lucida Sans'; font-size: 21px; font-weight: normal;">The insertion of consumptions will only be available in the last 15 days of each month, after that option will be removed by the staff next level.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</h1>
<div class="table-responsive-sm">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Client.FullName)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.ConsumptionDate)
                </th>
                <th>
                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Echelon)
                </th>
                <th>
                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.UnitaryValue)
                </th>
                <th>
                    <i class="fas fa-money-bill-alt"></i> @Html.DisplayNameFor(model => model.TotalConsumption)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConsumptionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Echelon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitaryValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalConsumption)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Client.FullName)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.ConsumptionDate)
                </th>
                <th>
                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Echelon)
                </th>
                <th>
                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.UnitaryValue)
                </th>
                <th>
                    <i class="fas fa-money-bill-alt"></i> @Html.DisplayNameFor(model => model.TotalConsumption)
                </th>
            </tr>
        </tfoot>
    </table>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />

@section Scripts{
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}