@model IEnumerable<WaterCompany.Data.Entities.Invoice>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css" />

<br />
<br />
<br />
<br />
<h1 class="big-title"><i class="fas fa-file-invoice-dollar"></i> Invoices <br /><hr class="center-ball" /><br /></h1>
<div class="table-responsive-sm">
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Client.FullName)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.Consumption.Echelon)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.Consumption.UnitaryValue)
                </th>
                <th>
                    <i class="far fa-credit-card"></i> @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    <i class="fas fa-question"></i> @Html.DisplayNameFor(model => model.IsPaid)
                </th>
                <th><i class="fas fa-filter"></i> Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Consumption.Echelon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Consumption.UnitaryValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPaid)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fas fa-info-circle"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Client.FullName)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.Consumption.Echelon)
                </th>
                <th>
                    <i class="fas fa-calendar-week"></i> @Html.DisplayNameFor(model => model.Consumption.UnitaryValue)
                </th>
                <th>
                    <i class="far fa-credit-card"></i> @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    <i class="fas fa-question"></i> @Html.DisplayNameFor(model => model.IsPaid)
                </th>
                <th><i class="fas fa-filter"></i> Options</th>
            </tr>
        </tfoot>
    </table>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />

@section Scripts{
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}